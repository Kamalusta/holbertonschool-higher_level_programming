#!/usr/bin/python3
'''doc'''


class Base:
    '''doc'''

    __nb_objects = 0

    def __init__(self, id=None):
        if id is not None:
            self.id = id
        else:
            #self.__class__.__nb_objects += 1
            #self.id = self.__class__.__nb_objects
            self.__nb_objects(1)
            self.id = self.__nb_objects

    @property
    def __nb_objects(self):
        return self.__nb_objects

    @__nb_objects.setter
    def __nb_objects(self, value):
        self.__nb_objects += value
        
